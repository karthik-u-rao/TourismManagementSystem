@model Tourism.DataAccess.Models.Package

@{
    ViewData["Title"] = "Edit Package";
}

<h2>Edit Package</h2>
<hr />

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="PackageId" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Location"></label>
        <input asp-for="Location" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Duration"></label>
        <input asp-for="Duration" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="AvailableSeats"></label>
        <input asp-for="AvailableSeats" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ImageUrl">Package Image URL</label>
        <input asp-for="ImageUrl" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary mt-2">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">Back</a>
</form>

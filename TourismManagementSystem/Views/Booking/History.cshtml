@model IEnumerable<Tourism.DataAccess.Models.Booking>

@{
    ViewData["Title"] = "My Bookings";
}

<h2>My Bookings</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-info">@TempData["Message"]</div>
}

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Package</th>
            <th>Location</th>
            <th>Seats</th>
            <th>Booking Date</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Package.Name</td>
                <td>@item.Package.Location</td>
                <td>@item.NumberOfSeats</td>
                <td>@item.BookingDate.ToShortDateString()</td>
                <td>@item.Status</td>
                <td>
                    @if (item.Status == "Booked")
                    {
                        <form asp-action="Cancel" asp-route-id="@item.BookingId" method="post">
                            <button type="submit" class="btn btn-danger btn-sm">Cancel</button>
                        </form>
                    }
                    else
                    {
                        <span class="text-muted">-</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@model TourismManagementSystem.ViewModels.BookingViewModel

@{
    ViewData["Title"] = "Booking Confirmation";
}

<h2>Booking Confirmation</h2>
<hr />

<div class="card p-3">
    <h4>@Model.PackageName</h4>
    <p><strong>Location:</strong> @Model.Location</p>
    <p><strong>Price per Seat:</strong> ₹@Model.Price</p>
    <p><strong>Seats Booked:</strong> @Model.NumberOfSeats</p>
    <p><strong>Total Amount:</strong> ₹@(Model.Price* Model.NumberOfSeats)</p>
</div>

<form asp-controller="Payment" asp-action="Payment" method="post">
    <input type="hidden" name="BookingId" value="@Model.BookingId" />
    <input type="hidden" name="Amount" value="@(Model.Price* Model.NumberOfSeats)" />
    <button type="submit" class="btn btn-primary mt-3">Proceed to Payment</button>
</form>

@model Tourism.DataAccess.Models.Payment

<div class="container mt-4">
    <h2 class="fw-bold">Checkout</h2>
    <p class="text-muted">Complete your payment below.</p>

    <form asp-action="Checkout" method="post">
        <input type="hidden" asp-for="BookingId" />
        <input type="hidden" asp-for="Amount" />

        <div class="mb-3">
            <label class="form-label">Amount</label>
            <input class="form-control" value="₹@Model.Amount" readonly />
        </div>

        <div class="mb-3">
            <label class="form-label">Card Number</label>
            <input class="form-control" placeholder="1234 5678 9012 3456" required />
        </div>

        <div class="mb-3 row">
            <div class="col">
                <label class="form-label">Expiry</label>
                <input class="form-control" placeholder="MM/YY" required />
            </div>
            <div class="col">
                <label class="form-label">CVV</label>
                <input class="form-control" placeholder="123" required />
            </div>
        </div>

        <button type="submit" class="btn btn-success w-100">Pay Now</button>
    </form>
</div>

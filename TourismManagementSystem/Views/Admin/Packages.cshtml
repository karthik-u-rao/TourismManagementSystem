@model IEnumerable<Tourism.DataAccess.Models.Package>

@{
    ViewData["Title"] = "Manage Packages";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Manage Packages</h2>
    <a asp-controller="Package" asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Add New Package
    </a>
</div>

<div class="row">
    @foreach (var package in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <img src="@(string.IsNullOrEmpty(package.ImageUrl) ? "/images/default-package.jpg" : package.ImageUrl)" 
                     class="card-img-top" alt="@package.Name" style="height:200px; object-fit:cover;" />
                
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@package.Name</h5>
                    <p class="card-text text-muted">
                        <i class="bi bi-geo-alt"></i> @package.Location
                    </p>
                    <p class="card-text">@package.Description</p>
                    <p class="fw-bold text-success">?@package.Price per person</p>
                    <p class="small text-muted">
                        <i class="bi bi-calendar"></i> @package.StartDate.ToString("MMM dd") - @package.EndDate.ToString("MMM dd, yyyy")
                    </p>
                    <p class="small text-muted">
                        <i class="bi bi-people"></i> @package.AvailableSeats seats available
                    </p>
                    <p class="small text-muted">
                        <i class="bi bi-bookmark"></i> @package.Bookings.Count() total bookings
                    </p>

                    <div class="mt-auto d-flex gap-2">
                        <a asp-controller="Package" asp-action="Details" asp-route-id="@package.PackageId" 
                           class="btn btn-outline-primary btn-sm flex-fill">
                            <i class="bi bi-eye"></i> View
                        </a>
                        <a asp-controller="Package" asp-action="Edit" asp-route-id="@package.PackageId" 
                           class="btn btn-outline-warning btn-sm flex-fill">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <a asp-controller="Package" asp-action="Delete" asp-route-id="@package.PackageId" 
                           class="btn btn-outline-danger btn-sm flex-fill">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.Any())
{
    <div class="text-center">
        <h4>No packages found</h4>
        <p>Create your first package to get started.</p>
        <a asp-controller="Package" asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Create First Package
        </a>
    </div>
}